<!--Add Task Modal-->
<div class="modal fade" id="taskModal" tabindex="-1" role="dialog" aria-labelledby="taskModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content ">
      <div class="modal-header">
        <h5 class="modal-title" id="taskModalTitle">Create new task</h5>
        <button type="button" class="close btn" data-dismiss="modal" aria-label="Close">
          <span class="h3" aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <form class="m-4">
          <div class="form-group mb-4">
            <label for="task-project">Project</label>
              <select id="task-project" class="form-control">
                {{#each user.projects as |project|}}
                  <option value="{{project._id}}">{{project.title}}</option>             
                {{/each}}
            </select>
           </div>
          <div class="form-group mb-4">
            <label for="task-title">Title</label>
            <input type="text" class="form-control" id="task-title" placeholder="Enter task title">
          </div>
          <div class="form-group mb-4">
            <label for="task-description">Description</label>
            <input type="text" class="form-control" id="task-description" placeholder="Enter task description">
          </div>
          <div class="container w-100 p-0 mb-4"> 
            <label>Due Date </label> 
            <div id="datepicker" 
              class="input-group date w-100" 
              data-date-format="mm-dd-yyyy"> 
              <input id="due-date" class="form-control" 
                    type="text" readonly /> 
              <span class="input-group-addon"> 
                  {{!-- <i class='bx bx-calendar' ></i> --}}
              </span> 
            </div> 
          </div> 
          <div class="form-group mb-4">
            <label for="task-priority">Priority</label>
              <select id="task-priority" class="form-control">
                <option>Critical</option>
                <option>High</option>
                <option>Medium</option>
                <option>Minor</option>
              </select>
           </div>
           <div class="form-group mb-4">
              <label for="task-status">Status</label>
              <select id="task-status" class="form-control">
                <option>Not started</option>
                <option>In progress</option>
                <option>Complete</option>
              </select>
           </div>
           <div class="mb-4" id="task-assignees" data-value="{{json user.projects}}">
              <p>Assignees</p>
           </div>
          <buttonn id="new-task-submit" type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Add Project Modal-->
<div class="modal fade" id="projectModal" tabindex="-1" role="dialog" aria-labelledby="projectModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="projectModalTitle">Create new project</h5>
        <button type="button" class="close btn" data-dismiss="modal" aria-label="Close">
          <span class="h3" aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{!-- form title text description textonylowneredit select status input collaboators div (handle rest in js) --}}
        <form autocomplete="off">
           <div class="form-group mb-4">
            <label for="project-title">Title</label>
            <input type="text" class="form-control" id="project-title" placeholder="Enter title">
          </div>
          <div class="form-group mb-4">
            <label for="project-description">Description</label>
            <input type="text" class="form-control" id="project-description" placeholder="Enter description">
          </div>
          <div class="form-check form-switch mb-4">
            <input class="form-check-input only-owner-edit" type="checkbox" id="only-owner-edit" checked>
            <label class="form-check-label" for="only-owner-edit">All collaboators can edit or delete this project</label>
          </div>
          <div id="chosen-collaborators"></div>
            <div class="mb-4 d-block">
              <p class="mb-0">Collaboators</p>
              <input type="text" name="project-collaborators" id="project-collaborators" onKeyUp="showResults(this.value)" /> 
              <div id="result"></div>
            </div>
            <buttonn id="new-project-submit" type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


