<div class="d-flex flex-column justify-content-center align-items-center mt-4">
<h4 class="display-8 w-75 text-secondary text-left" id="sub-title"></h4>
 <h4 class="heading-3 w-75 text-left">Welcome, {{username}}</h4>   
<div class="card w-75" id="task-card" data-value="{{json user.tasks}}">
    <div class="card-body d-flex flex-row justify-content-between align-items-center display-6">
        <section class="m-4 text-center">
            <p class="text-secondary">Total tasks</p>
            <p id="total"></p>
        </section>
        <div style="width:2px; min-height:100%;" class="bg-secondary"></div>
        <section class="m-4 text-center">
            <p class="text-secondary">Not started tasks</p>
            <p id="not-started"></p>
        </section class="m-4 text-center">
        <section class="m-4 text-center">
            <p class="text-secondary">In progress tasks</p>
            <p id="in-progress"></p>
        </section>
        <section class="m-4 text-center">
            <p class="text-secondary">Complete tasks</p>
            <p id="complete"></p>
        </section>
    </div>
</div>
{{#if user.tasks}}
<div class="d-flex flex-row w-50 justify-content-between text-center">
    <section class="w-50 m-4">
       <h3>All tasks</h3>
       <div id="accordion">
            {{#each user.tasks as |task|}}
                <div class="card">
                    <div class="card-header" id="taskheading{{@index}}">
                        <h5 class="mb-0">
                            <button class="btn btn-link" data-toggle="collapse" data-target="#taskcollapse{{@index}}" aria-expanded="false" aria-controls="taskcollapse{{@index}}">
                                {{task.title}}
                            </button>
                        </h5>
                    </div>
                    <div id="taskcollapse{{@index}}" class="collapse" aria-labelledby="taskheading{{@index}}" data-parent="#accordion">
                        <div class="card-body">
                            {{task.description}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
{{/if}} 
{{#if user.projects}}
<section class="w-50 m-4">
<h3>All projects</h3>
    <div id="accordion">
        {{#each user.projects as |project|}}
            <div class="card">
                <div class="card-header" id="projectheading{{@index}}">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#projectcollapse{{@index}}" aria-expanded="false" aria-controls="projectcollapse{{@index}}">
                            {{project.title}}
                        </button>
                    </h5>
                </div>
                <div id="projectcollapse{{@index}}" class="collapse" aria-labelledby="projectheading{{@index}}" data-parent="#accordion">
                    <div class="card-body">
                        {{project.description}}
                        <div class="m-2">
                            
                            <a href="/projects/{{project._id}}"><button class="btn btn-primary">View more</button></a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    {{!-- {{user.projects.length}} --}}
</section>
{{/if}}
</div>
</div>
<script src="/dashboard.js"></script>
