{{#if user.tasks}}
<div class="d-flex flex-row w-50 justify-content-between text-center">
    <section class="w-50 m-4">
       <h3>All tasks</h3>
       <div id="accordion">
            {{#each user.tasks as |task|}}
                <div class="card">
                    <div class="card-header" id="taskheading{{@index}}">
                        <h5 class="mb-0">
                            <button class="btn btn-link" data-toggle="collapse" data-target="#taskcollapse{{@index}}" aria-expanded="false" aria-controls="taskcollapse{{@index}}">
                                {{task.title}}
                            </button>
                        </h5>
                    </div>
                    <div id="taskcollapse{{@index}}" class="collapse" aria-labelledby="taskheading{{@index}}" data-parent="#accordion">
                        <div class="card-body">
                            {{task.description}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
{{/if}} 
{{#if user.projects}}
<section class="w-50 m-4">
<h3>All projects</h3>
    <div id="accordion">
        {{#each user.projects as |project|}}
            <div class="card">
                <div class="card-header" id="projectheading{{@index}}">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#projectcollapse{{@index}}" aria-expanded="false" aria-controls="projectcollapse{{@index}}">
                            {{project.title}}
                        </button>
                    </h5>
                </div>
                <div id="projectcollapse{{@index}}" class="collapse" aria-labelledby="projectheading{{@index}}" data-parent="#accordion">
                    <div class="card-body">
                        {{project.description}}
                        <div class="m-2">
                            
                            <a href="/projects/{{project._id}}"><button class="btn btn-primary">View more</button></a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    {{!-- {{user.projects.length}} --}}
</section>
{{/if}}
</div>
</div>
