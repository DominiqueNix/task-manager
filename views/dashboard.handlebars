<div class="d-flex flex-column justify-content-start mt-4 ">
  <h2>Welcome, {{user.email}}</h2>
  <h4 class="display-8 text-secondary align-self-start" id="sub-title"></h4>
  <section id="top-section" class="d-flex flex-row align-items-around justify-content-between">
    <section id="task-stats" class="w-25">
        <h3 class="text-start">Task Stats</h3>
        <div class="card" id="task-card" data-value="{{json user.tasks}}"> 
          <div class="card-body d-flex flex-column justify-content-between align-items-center ">
              <section class="task-stats m-1 d-flex align-items-center justify-content-around flex-row border bs-border-color-translucent rounded py-4 w-100">
                  <span><i class='bx bx-note'></i>Total</span>
                  <span class="task-tot"  id="total"></span>
              </section>
              <section class="task-stats m-1 d-flex align-items-center justify-content-around flex-row  border bs-border-color-translucent rounded py-4 w-100">    
                  <span><i class='bx bx-pause-circle ' ></i>Backlog</span>
                  <span class="task-tot"  id="not-started"></span>            
              </section>
              <section class="task-stats m-1 d-flex align-items-center justify-content-around flex-row border bs-border-color-translucent rounded py-4 w-100">           
                  <span><i class='bx bx-loader '></i>In-progress</span>
                  <span class="task-tot" id="in-progress"></span>         
              </section>
              <section class="task-stats m-1 d-flex align-items-center justify-content-around flex-row border bs-border-color-translucent rounded py-4 w-100">    
                  <span><i class='bx bx-check-circle ' ></i>Complete</span>
                  <span class="task-tot"  id="complete"></span>            
              </section>
          </div>
        </div>
      </section>
      <section id="project-stats" class="w-75">
        <h3 class="text-start">Project Stats</h3>
        <table class="table border bs-border-color-translucent">
          <thead>
            <tr class="table-active">
              <th class="top-row"scope="col">Name</th>
              <th class="top-row"scope="col">Description</th>
              <th class="top-row w-25"scope="col">Progress</th>
              <th class="top-row w-25"scope="col"></th>
            </tr>
          </thead>
          <tbody>
              {{#each user.projects as |project|}} 
                <tr class="m-2">
                  <td><div class="cell-content">{{project.title}}</div></td>
                  <td class="description"><div class="cell-content">{{project.description}}</div></td>
                  <td class="progress-section">
                    <div class="cell-content">
                        <div class="progress w-100">
                          <div id="progress-project-{{project._id}}" class="progress-bar" role="progressbar" style="width: 33%"></div>
                        </div> 
                    </div>
                  </td>
                  <td class="table-btn text-end">
                    <div class="cell-content justify-content-center">
                        <a href="/projects/{{project._id}}" class="">
                          <button class="btn view-more-btn">View More</button>
                        </a>
                    </div>
                  </td>
                </tr>
              {{/each}}
          </tbody>
        </table>
      </section>
  </section>
  <section id="upcoming-tasks">

  </section>
  
  

